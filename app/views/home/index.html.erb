<div class="container" style="margin-top:50px">
    <div class="row">
        <form action="/write" method="POST">
          <div class="col-md-1">여백</div>
          <div class="col-md-4">
              <div class="form-group">
                <label for="exampleInputEmail1">이번 계획</label>
                <textarea name="content" class="form-control" rows="10" placeholder="앞으로 주의할 사항들"></textarea>
              </div>
          </div>
          <div class="col-md-1"></div>
          <div class="col-md-4">
              <div class="form-group">
                <label for="exampleInputEmail1">저번 계획에 대한 피드백</label>
                <textarea name="feedback" class="form-control" rows="10" placeholder="좋았던 점과 나빳던 점, 개선 가능한 부분을 생각해 작성해주세요"></textarea>
              </div>
          </div>
          <div class="col-md-2">
              <button type="submit" class="btn btn-primary">작성완료</button>
          </div>
        </form>
    </div><!--row-->
    <hr>
    <!--이하 list row-->
    <h2>History</h2>
    <% @every_post.each do |p| %>
    <div class="row">
        <div class="col-md-1">문서번호</div>
        <div class="col-md-4"><%= p.id %></div>
        <div class="col-md-1">작성시간</div>
        <div class="col-md-6"><%= p.created_at %></div>
    </div>
    <div class="row">
        <div class="col-md-1">작성내용</div>
        <div class="col-md-4"><%= p.content %></div>
        <div class="col-md-1">피드백</div>
        <div class="col-md-4"><%= p.feedback %></div>
        <div class="col-md-2"><a href="/destroy/<%= p.id %>">[삭제]</a></div>
    </div>
        <hr>
        <% end %>
</div>